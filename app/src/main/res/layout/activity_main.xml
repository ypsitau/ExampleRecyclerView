<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".MainActivity"
	android:background="#cccccc">

	<TextView
		android:id="@+id/labelMain"
		android:layout_width="0dp"
		android:layout_height="40dp"
		android:gravity="center_vertical"
		android:text="One-column Recycler View"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toTopOf="@+id/recyclerView"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toStartOf="@+id/button_nextActivity" />

	<Button
		android:id="@+id/button_nextActivity"
		android:layout_width="wrap_content"
		android:layout_height="0dp"
		android:text="Next Activity"
		app:layout_constraintTop_toTopOf="@+id/labelMain"
		app:layout_constraintBottom_toBottomOf="@+id/labelMain"
		app:layout_constraintStart_toEndOf="@+id/labelMain"
		app:layout_constraintEnd_toEndOf="parent" />

	<android.support.v7.widget.RecyclerView
		android:id="@+id/recyclerView"
		android:scrollbars="vertical"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:background="#ffffff"
		app:layout_constraintVertical_weight="4"
		app:layout_constraintTop_toBottomOf="@+id/labelMain"
		app:layout_constraintBottom_toTopOf="@+id/editText_log"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent" />

	<EditText
		android:id="@+id/editText_log"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:background="#ffffff"
		android:layout_marginTop="4dp"
		app:layout_constraintVertical_weight="1"
		app:layout_constraintTop_toBottomOf="@+id/recyclerView"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent" />
</android.support.constraint.ConstraintLayout>